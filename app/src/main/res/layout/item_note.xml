<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_note_layout"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/brown_color"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/item_note_priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/dot_orange"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="Note title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/item_note_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Note subtitle lksdfj asdklfj lkdj l;fsd sdjfl;dsj fl;asdjf sdf fdfidjf didfjdsifj sddf"
                android:textSize="16sp"
                android:textColor="#D8D8D8" />

            <TextView
                android:id="@+id/item_note_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:text="13-22-2022"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>